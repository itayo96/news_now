@using Microsoft.AspNetCore.Identity
@using NewsNow.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<header class="blog-header border shadow-sm">
    <div class="container">
        <div class="d-flex justify-content-between">
            <div class="p-2">
                @if (SignInManager.IsSignedIn(User))
                {
                <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="btn-group btn-group-justified" role="group">
                    <button type="submit" class="btn btn-outline-secondary">Log out</button>
                    <a asp-controller="Statistics" asp-action="Index" class="btn btn-outline-secondary">Statistics</a>
                    <a asp-controller="Categories" asp-action="Index" class="btn btn-outline-secondary">Categories</a>
                    <a asp-controller="Articles" asp-action="Index" class="btn btn-outline-secondary">Articles</a>
                </form>
                }
                else
                {
                    <a class="btn btn-sm btn-outline-secondary" asp-area="" asp-controller="Account" asp-action="Login">Log in</a>
                }
            </div>
            <div class="p-2 bd-highlight">
                <a class="blog-header-logo text-dark" href="@Url.Action("Index", "Home")">
                    <img src="~/images/NewsNowLogoBlack_300x65.png.png" class="animate-logo" />
                </a>
                <br />
            </div>
            <div class="p-2 bd-highlight">

                @if (SignInManager.IsSignedIn(User))
                {
                <span class="badge badge-danger">WARNING: ADMIN MODE</span>
                }
                else
                {
                    <a href="https://twitter.com/mideastbeasties?ref_src=twsrc%5Etfw" class="twitter-follow-button" data-size="large" data-show-screen-name="false" data-dnt="true" data-show-count="false">Follow Us</a>
                    <script async src="https://platform.twitter.com/widgets.js" charset="utf-8"></script>
                }
            </div>
        </div>
    </div>
</header>
