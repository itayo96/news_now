@model NewsNow.Models.Article

<div class="card" style="width: 18rem; background-color: #f2eeee">
    <a asp-controller="Articles" asp-action="Details" asp-route-id="@Html.DisplayFor(model => model.ArticleId)">
        <img class="card-img-top" data-src="holder.js/100px180/" alt="100%x180" style="height: 180px; width: 100%; display: block;" src="@Html.DisplayFor(model => model.HomeImage)" data-holder-rendered="true">
    </a>
    <div class="card-body">
        <h5 class="card-title">@Html.DisplayFor(model => model.HomeHeader)</h5>
        <p class="card-text">@Html.DisplayFor(model => model.HomeContent)</p>
        <a asp-controller="Articles" asp-action="Details" asp-route-id="@Html.DisplayFor(model => model.ArticleId)">Read more...</a>
    </div>
</div>