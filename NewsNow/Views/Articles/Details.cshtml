@section Scripts
{
    <script type="text/javascript">

        var bootstrap_img_converter = function (converter) {
            return [
                {
                    type: 'html',
                    regex: '<img src=(.*)>',
                    replace: '<img class="img-fluid img-thumbnail" src=$1>'
                }
            ]
        }

        $(document).ready(function () {
            var converter = new showdown.Converter({ extensions: [bootstrap_img_converter] }),
                text = decodeHtml("@Model.Content"),
                html = converter.makeHtml(text);

            $("#ArticleContent").html(html);
        })

        function decodeHtml(html) {
            var txt = document.createElement("textarea");
            txt.innerHTML = html;
            return txt.value;
        }
        </script>

    @if (Model.IsShowMap)
    {
        <script type="text/javascript" src="~/js/article-map.js"></script>
        <script type="text/javascript" src="https://www.bing.com/api/maps/mapcontrol?callback=LoadMap" async defer></script>
    }
}