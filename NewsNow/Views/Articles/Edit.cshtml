@model NewsNow.Models.Article

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Article</h4>

<div>

</div>

<hr />
<div class="row">
    <form asp-action="Edit">
        <div class="col-md-4">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ArticleId" />
            <div class="form-group">
                <label asp-for="HomeHeader" class="control-label"></label>
                <input asp-for="HomeHeader" class="form-control" />
                <span asp-validation-for="HomeHeader" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HomeContent" class="control-label"></label>
                <input asp-for="HomeContent" class="form-control" />
                <span asp-validation-for="HomeContent" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HomeImage" class="control-label"></label>
                <input asp-for="HomeImage" class="form-control" />
                <span asp-validation-for="HomeImage" class="text-danger"></span>
            </div>
            
        </div>
        <div class="col-md-12">
            <div class=" form-group">
                <label asp-for="DetailedContent" class="control-label"></label>
                <textarea asp-for="DetailedContent" id="MDEditorTextArea"></textarea>
                <span asp-validation-for="DetailedContent" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </form>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts
{
    <script type="text/javascript">
        $(document).ready(function () {
            var simplemde = new SimpleMDE({ element: $("#MDEditorTextArea")[0] });
            var str = decodeHtml("@Model.DetailedContent")
            simplemde.value(str);
        })

        function decodeHtml(html) {
            var txt = document.createElement("textarea");
            txt.innerHTML = html;
            return txt.value;
        }
    </script>
}